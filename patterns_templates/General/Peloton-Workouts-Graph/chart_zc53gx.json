{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Bar Chart",
  "mark": { "type": "bar", "color": "#FF3347", "strokeWidth": 2 },
  "encoding": {
    "x": { "field": "year", "type": "temporal", "title": "Year" },
    "y": {
      "field": "total_distance_per_year",
      "type": "quantitative",
      "title": "Annual Distance"
    },
    "tooltip": { "field": "total_distance_per_year", "type": "quantitative" }
  }
}
